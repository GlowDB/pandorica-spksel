                fieldset.hide.usb-control(data-role='controlgroup', data-type='horizontal', data-mini='true')
                    legend USB Track
                    button(data-ir='PhilipsHiFiUsb Usb1') 01
                    button(data-ir='PhilipsHiFiUsb Usb2') 02
